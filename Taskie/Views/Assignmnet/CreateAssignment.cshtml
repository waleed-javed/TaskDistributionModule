@model Taskie.Models.AssignmentModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Assigment_table</h4>
        <hr />
    
        <div class="form-group">
                <label for="Title">Enter Title</label><br>
                <input type="text" id="Title" name="Assignment_Title"><br><br>

                <label for="Description">Enter Description</label><br>
                <input type="text" id="Description" name="Assignment_Description"><br><br>

                <label for="Priority">Select Priority</label><br>
                    <select name="Assignment_Priority" id="Priority">
                        <option value="High">High</option>
                        <option value="Normal">Normal</option>
                        <option value="Low">Low</option>
                    </select><br><br>

                <label for="Author">Enter Author Name</label><br>
                <input type="text" id="Author" name="Created_By_Employee_ID"><br><br>

                <label for="Assignment_Image">Upload Image (Optional)</label>
                <input type="file" id="Assignment_Image" name="Assignment_Image"><br>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
                <input type="reset" value="Clear" class="btn btn-danger">
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

